package ow_elements;

import com.badlogic.gdx.graphics.g2d.Batch;
import com.badlogic.gdx.scenes.scene2d.Stage;
import screens.OverWorldScreen;

public class Npc extends Element{
	protected OverWorldScreen nivel;
	
	public Npc(float x, float y, Stage s, OverWorldScreen nivel) {
		super(x,y,s);
		this.nivel=nivel;
	}
	
	public void act(float delta) {
		colide();
	}
	
	public void colide() {
		if(this.getEnabled() && this.overlaps(this.nivel.prota)) {
			this.nivel.prota.preventOverlap(this);
		}
	}
}
