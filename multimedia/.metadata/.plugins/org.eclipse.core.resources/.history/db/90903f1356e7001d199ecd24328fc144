public class Tareas extends Actor {

    private BitmapFont font;
    public static float tiempoRestante = 300;
    private String titulo;
    private String lista = "";
    private Texture tareas;

    private String[] tareasStrings = {"He de comer algo.", // 1
            "He de pagar mis deudas.", // 2
            "Un extraño muñeco.", // 3
            "Un encuentro agridulce.", // 4
            "Dein Kampf.", // 5
            "Lettera d' amore."}; // 6

    private static boolean[] tareasBoolean = {Parametros.haComidoHoy, // 1
            Parametros.haPagadoDeuda, // 2
            Parametros.mision_un_extrano_muneco, // 3
            Parametros.mision_un_encuentro_agridulce, // 4
            Parametros.mision_dein_kampf, // 5
            Parametros.mision_una_lettera_d_amore}; // 6

    public Tareas() {
        // Cargar la fuente desde el archivo Peepo.ttf
        FreeTypeFontGenerator generator = new FreeTypeFontGenerator(Gdx.files.internal("Peepo.ttf"));
        FreeTypeFontGenerator.FreeTypeFontParameter parameter = new FreeTypeFontGenerator.FreeTypeFontParameter();
        parameter.size = 17; // Tamaño de la fuente
        this.font = generator.generateFont(parameter);
        generator.dispose();

        // Configurar el resto de los atributos
        this.titulo = "- LISTA DE TAREAS -";
        setBounds(10, 300, 232, 290);
        this.tareas = new Texture("Menu/listaTareas.png");

        // Actualizar la lista con las tareas que estén en true
        actualizarLista();
    }

    public void act(float delta) {
        super.act(delta);
        actualizarLista();
    }

    public void draw(Batch batch, float parentAlpha) {
        super.draw(batch, parentAlpha);
        batch.draw(tareas, getX(), getY(), getWidth(), getHeight());
        font.draw(batch, titulo, 43, 569);
        font.draw(batch, lista, 22, 527);
    }

    private void actualizarLista() {
        lista = "";
        for (int i = 0; i < tareasBoolean.length; i++) {
            if (tareasBoolean[i]) { // Si la tarea se ha completado, la eliminamos de la lista
                lista = lista.replace(tareasStrings[i] + "\n", "");
            } else {
                lista += tareasStrings[i] + "\n";
            }
        }
    }
}