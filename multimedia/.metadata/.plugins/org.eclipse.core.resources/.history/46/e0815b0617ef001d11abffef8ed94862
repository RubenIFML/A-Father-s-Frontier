package ow_elements;

import com.badlogic.gdx.scenes.scene2d.Stage;

import screens.OverWorldScreen;

public class NpcMovil extends Element {
    private float velocidad;
    private int direccionMovimiento;
    private OverWorldScreen nivel;
    private int direccion;
    private boolean detenido;

    public NpcMovil(float x, float y, Stage s, OverWorldScreen nivel, String animacion, int direccion, float velocidad) {
        super(x, y, s);

        this.velocidad = velocidad;
        this.direccion = direccion;
        this.nivel = nivel;
        this.detenido = false;
        prepararAnimacion(animacion, true);
        this.setPolygon(8, 32, 23, 5, 5);

        if (direccion == 1) {
            direccionMovimiento = -1;
        } else if (direccion == 2) {
            direccionMovimiento = 1;
        }
    }

    public void act(float delta) {
        super.act(delta);

        if (detenido) {
            // Si está detenido, no se realiza ningún movimiento
            return;
        }

        if (direccion == 1) {
            moveBy(direccionMovimiento * this.velocidad * delta, 0);
        } else if (direccion == 2) {
            moveBy(0, direccionMovimiento * this.velocidad * delta);
        }
        animaciones();
        comprobarColisiones();
    }

    private void comprobarColisiones() {
        for (Solid solido : this.nivel.solidos) {
            if (this.overlaps(solido)) {
                if (direccion == 1) {
                    this.direccionMovimiento *= -1;
                } else if (direccion == 2) {
                    this.direccionMovimiento *= -1;
                }
            }
        }
        if (this.nivel.prota.overlaps(this)) {
            if (direccion == 1) {
                // Comprobar colisión de frente
                float deltaX = this.getX() - this.nivel.prota.getX();
                if (deltaX < 0 && direccionMovimiento > 0) {
                    // Detenerse si el NPC se mueve a la derecha y está delante del personaje
                    detenido = true;
                } else if (deltaX > 0 && direccionMovimiento < 0) {
                    // Detenerse si el NPC se mueve a la izquierda y está delante del personaje
                    detenido = true;
                }
            } else if (direccion == 2) {
                // Comprobar colisión de frente
                float deltaY = this.getY() - this.nivel.prota.getY();
                if (deltaY < 0 && direccionMovimiento > 0) {
                    // Detenerse si el NPC se mueve hacia arriba y está delante del personaje
                    detenido = true;
                } else if (deltaY > 0 && direccionMovimiento < 0) {
                    // Detenerse si el NPC se mueve hacia abajo y está delante del personaje
                    detenido = true;
                }
            }
        } else {
            detenido = false; // Reiniciar el estado de detenido si ya no hay colisión
        }
    }


    private void animaciones() {
        if (direccionMovimiento > 0) {
            if (direccion == 1) {
                this.setAnimation(this.derecha);
            } else if (direccion == 2) {
                this.setAnimation(this.espalda);
            }
        } else if (direccionMovimiento < 0) {
            if (direccion == 1) {
                this.setAnimation(this.izquierda);
            } else if (direccion == 2) {
                this.setAnimation(this.frente);
            }
        }
    }
}

